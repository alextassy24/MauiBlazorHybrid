                    <i class="text-2xl text-white fas fa-weight"></i>
                </div>
                <h4 class="text-lg font-semibold text-white">Last Weight</h4>
                <p class="mt-1 text-sm text-white/80">70 kg (2 days ago)</p>
            </div>

            <!-- Last Workout Logged -->
            <div class="flex flex-col items-center justify-center p-6 text-center border shadow-sm bg-white/10 backdrop-blur-lg rounded-3xl border-white/20">
                <div class="flex items-center justify-center mb-3 bg-blue-500 rounded-full shadow-lg w-14 h-14">
                    <i class="text-2xl text-white fas fa-dumbbell"></i>
                </div>
                <h4 class="text-lg font-semibold text-white">Last Workout</h4>
                <p class="mt-1 text-sm text-white/80">Chest & Triceps (Yesterday)</p>
            </div>

            <!-- Calories Remaining -->
            <div class="flex flex-col items-center justify-center p-6 text-center border shadow-sm bg-white/10 backdrop-blur-lg rounded-3xl border-white/20">
                <div class="flex items-center justify-center mb-3 bg-orange-500 rounded-full shadow-lg w-14 h-14">
                    <i class="text-2xl text-white fas fa-chart-pie"></i>
                </div>
                <h4 class="text-lg font-semibold text-white">Calories Remaining</h4>
                <p class="mt-1 text-sm text-white/80">650 kcal</p>
            </div>
        </div>
    </section>
</div>

