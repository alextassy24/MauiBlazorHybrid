        <div class="grid grid-cols-1 gap-6 mt-8 sm:grid-cols-2 lg:grid-cols-3">
            <div class="p-5 bg-blue-500 rounded-lg shadow-lg">
                <i class="text-3xl fa-solid fa-apple-alt"></i>
                <h4 class="mt-4 text-xl font-semibold">Personalized Meal Plans</h4>
                <p class="mt-2 text-gray-100">Create custom meal plans that fit your dietary needs and preferences.</p>
            </div>
            <div class="p-5 bg-green-500 rounded-lg shadow-lg">
                <i class="text-3xl fa-solid fa-trophy"></i>
                <h4 class="mt-4 text-xl font-semibold">Progress Tracking</h4>
                <p class="mt-2 text-gray-100">Monitor your improvements, stay motivated, and celebrate your achievements.</p>
            </div>
        </div>
    </section>

        <!-- User Badges -->
    <section class="w-full max-w-4xl mt-12 space-y-8">
        <h3 class="text-2xl font-semibold text-center text-white/90">Your Stats</h3>

        <div class="grid grid-cols-1 gap-6 md:grid-cols-2 lg:grid-cols-4">
            <!-- Streak Days -->
            <div class="flex flex-col items-center justify-center p-6 text-center border shadow-sm bg-white/10 backdrop-blur-lg rounded-3xl border-white/20">
                <div class="flex items-center justify-center mb-3 bg-red-500 rounded-full shadow-lg w-14 h-14">
                    <i class="text-2xl text-white fas fa-fire"></i>
                </div>
                <h4 class="text-lg font-semibold text-white">Streak Days</h4>
                <p class="mt-1 text-sm text-white/80">7 days</p>
            </div>

            <!-- Last Weight Registered -->
            <div class="flex flex-col items-center justify-center p-6 text-center border shadow-sm bg-white/10 backdrop-blur-lg rounded-3xl border-white/20">
